<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewStudent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewStudentrecycle"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upper"
            >
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="5sp"
                android:layout_margin="10dp"
                android:backgroundTint="#8A3F51B5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:id="@+id/personal"
                        android:text="Personal details"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        >



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ID:"
                            android:textSize="22sp"
                            android:layout_margin="15dp"
                            android:textColor="@color/black"

                            />
                        <TextView
                            android:id="@+id/studentsetID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="N/A"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:layout_margin="15dp"
                            android:textColor="@color/black"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15sp"
                            android:text="Name:"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            />
                        <TextView
                            android:id="@+id/StudentSetName"
                            android:layout_width="match_parent"
                            android:layout_margin="15sp"
                            android:layout_height="wrap_content"
                            android:hint="N/A"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15sp"
                            android:text="Department:"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            />
                        <TextView
                            android:id="@+id/studentsetDepart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15sp"
                            android:hint="N/A"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Semester:"
                            android:layout_margin="15sp"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            />
                        <TextView
                            android:id="@+id/studentsetSemester"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="N/A"
                            android:layout_margin="15sp"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date:"
                            android:textSize="17sp"
                            android:layout_margin="15sp"
                            android:textColor="@color/black"

                            />
                        <TextView
                            android:id="@+id/studentsetDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15sp"
                            android:hint="N/A"
                            android:textSize="17sp"
                            android:textColor="@color/black"

                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone:"
                            android:textSize="17sp"
                            android:layout_margin="15sp"
                            android:textColor="@color/black"

                            />
                        <TextView
                            android:id="@+id/studentsetPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="N/A"
                            android:textSize="17sp"
                            android:layout_margin="15sp"
                            android:textColor="@color/black"

                            />

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upper"
            android:id="@+id/studentperformance"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="5dp"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:backgroundTint="#EDDE59"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:layout_margin="15dp"
                        android:textStyle="bold"
                        android:id="@+id/studenttt"
                        android:text="Student Performance"

                        />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/markstable"
                        android:layout_below="@id/studenttt"
                        android:layout_margin="15dp"
                        android:layout_centerHorizontal="true"
                        >
                        <TableRow>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="Percentage"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="Attendence"
                                android:layout_gravity="center"
                                />

                        </TableRow>
                        <TableRow>
                            <RelativeLayout
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                >
                                <ProgressBar
                                    android:id="@+id/studentPercentage"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="0"
                                    android:progressDrawable="@drawable/circular"
                                    android:secondaryProgress="100"
                                    />
                                <TextView
                                    android:id="@+id/showpercentages"
                                    android:layout_width="250dp"
                                    android:layout_height="250dp"
                                    android:gravity="center"
                                    android:text="25%"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />


                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="170dp"
                                android:layout_height="150dp">

                                <ProgressBar

                                    android:id="@+id/studentAttendencer"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="170dp"
                                    android:layout_height="150dp"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="35"
                                    android:progressDrawable="@drawable/circular"
                                    android:secondaryProgress="100"
                                    />
                                <TextView
                                    android:id="@+id/showAttendences"
                                    android:layout_width="250dp"
                                    android:layout_height="250dp"
                                    android:gravity="center"
                                    android:text="25%"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                            </RelativeLayout>
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:id="@+id/showResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/markstable"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="Result : PASS"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/showGrade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/showResult"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:text="GRADE : A"
                        android:layout_marginBottom="15dp"
                        android:textSize="15dp" />




                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentperformance"
            android:id="@+id/lower"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RecycleViewETIMarks"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lower"
            android:id="@+id/deeplower"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecycleViewMADMarks"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deeplower"
            android:id="@+id/deeperlower"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecycleViewWDPMarks"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deeperlower"
            android:id="@+id/deepestlower"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RecycleViewPWPMarks"
                />


        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>